{%- assign maxRelated = 4 -%} {%- assign minCommonTags = 1 -%} {%- assign
maxRelatedCounter = 0 -%}

<section class="tiles" id="one">
  {%- for post in site.posts -%} {%- assign sameTagCount = 0 -%} {%- assign
  commonTags = '' -%} {%- for tag in post.tags -%} {%- if post.url != page.url
  -%} {%- if page.tags contains tag -%} {%- assign sameTagCount = sameTagCount |
  plus: 1 -%} {%- capture tagmarkup -%}
  <span class="label label-default">{{ tag }}</span> {%- endcapture -%} {%-
  assign commonTags = commonTags | append: tagmarkup -%} {%- endif -%} {%- endif
  -%} {%- endfor -%} {%- if sameTagCount >= minCommonTags -%}
  <article>
    <span class="image">
      <img src="{{ post.image }}" alt="{{ post.title }}" />
    </span>
    <header class="major">
      <h3>
        <a href="{{ post.url | relative_url }}" class="link">{{
          post.title
        }}</a>
      </h3>
      <p>{{ post.description }}</p>
    </header>
  </article>
  {%- assign maxRelatedCounter = maxRelatedCounter | plus: 1 -%} {%- if
  maxRelatedCounter >= maxRelated -%} {%- break -%} {%- endif -%} {%- endif -%}
  {%- endfor -%}
</section>
